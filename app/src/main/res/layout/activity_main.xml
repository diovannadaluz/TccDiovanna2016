<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:angle="90"
    tools:context="com.example.aluno.tccdiovanna.MainActivity"
    android:weightSum="1"
    android:background="#212f48">

    <ImageView
        android:layout_width="394dp"
        android:layout_height="550dp"
        android:id="@+id/imageView3"
        android:layout_gravity="left|top"
        android:src="@drawable/inicial" />

    <Button
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="ITENS"
        android:id="@+id/btnItens"
        android:layout_gravity="left|bottom" />

    <Button
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="NOTÍCIAS"
        android:id="@+id/btnNoticias"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:text="GUIAS"
        android:id="@+id/btnGuias"
        android:layout_gravity="right|bottom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personagem"
        android:id="@+id/btnPersonagem"
        android:layout_gravity="left|top"
        android:onClick="personagensgrid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTATÍSTICAS"
        android:id="@+id/btnEstatisticas"
        android:layout_gravity="center_horizontal|top" />

    <Button
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:text="TALENTOS"
        android:id="@+id/btnTalentos"
        android:layout_gravity="right|top" />
</FrameLayout>
